<ginn>
  <global>
    <wish gesture="Drag" fingers="3">
      <action name="ca left" when="update">
        <trigger prop="delta x" min="500" max="5000"/>
        <key modifier1="Control_L" modifier2="Alt_L">Left</key>
      </action>
    </wish>
    <wish gesture="Drag" fingers="3">
      <action name="ca right" when="update">
        <trigger prop="delta x" min="-5000" max="-500"/>
        <key modifier1="Control_L" modifier2="Alt_L">Right</key>
      </action>
    </wish>
    <wish gesture="Drag" fingers="3">
      <action name="ca up" when="update">
        <trigger prop="delta y" min="-5000" max="-1000"/>
        <key modifier1="Control_L" modifier2="Alt_L">Up</key>
      </action>
    </wish>
    <wish gesture="Drag" fingers="3">
      <action name="ca down" when="update">
        <trigger prop="delta y" min="1000" max="5000"/>
        <key modifier1="Control_L" modifier2="Alt_L">Down</key>
      </action>
    </wish>
  </global>
</ginn>

